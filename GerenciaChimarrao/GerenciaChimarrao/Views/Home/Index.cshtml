@model IEnumerable<GerenciaChimarrao.Models.Gaucho>
@{
    ViewBag.Title = "Home Page";
}
<link rel="stylesheet" type="text/css" href="~/ViewStyle/CSS/Home.css">

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>


<div class="container" style="text-align:center">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4 columnMeio">
                <label>@Html.DisplayFor(modelItem => item.Nome)</label>
                <img src=@Html.DisplayFor(modelItem => item.Imagem.Path) class="img-responsive">
                <div class="botoes">
                    @Html.ActionLink("Visualizar roda", "VisualizaRoda", "Home", null, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Quem está com o chimarrão?", "EncontraChimarraoVivente", "Home", null, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Passar a cuia", "PassarParaProximo", "Home", new { id = item.ID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Sair da roda", "SairDaRoda", "Home", new { id = item.ID }, new { @class = "btn btn-primary" })
                </div>
            </div>
            @if (item.StatusGaucho.Descricao == "Bebendo mate")
            {
                <div class="col-md-4 teste">
                    <a>O Gaudério @Html.DisplayFor(modelItem => item.Nome) está bebendo</a>
                </div>
            }
        </div>
    }
</div>

